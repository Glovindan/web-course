$background-color: #f6f0ff;

* {
  margin: 0;
  font-family: 'Open Sans', sans-serif;
   box-sizing: border-box;
}

body {
  background: $background-color;
}

hr {
    border: 1px transparent solid;
    box-shadow: -1.5px -1.5px 2px 0 rgba(0,0,0,0.2), 2px 2px 3px 0 rgba(255,255,255,1);
}

.wrapper {
  min-height: 100vh;
  width: 1100px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}